<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/delete_staff_tip_text"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/id"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter" />

        <com.bestcode95.staffmanager.utils.MyEditText
            android:id="@+id/delete_staff_id_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="@string/delete_staff_id_edit_hint"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/tel"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter" />

        <com.bestcode95.staffmanager.utils.MyEditText
            android:id="@+id/delete_staff_tel_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:hint="@string/delete_staff_tel_edit_hint"
            android:inputType="textPassword" />
    </LinearLayout>


    <Button
        android:id="@+id/delete_staff_confirm_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_bg"
        android:text="@string/fix_password_confirm_bt_text"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/delete_staff_cancel_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_forgetpwd_bt_bg"
        android:text="@string/fix_password_cancel_bt_text"
        android:textSize="25sp" />


</LinearLayout>