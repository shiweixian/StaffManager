<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#00000000"
    android:padding="3dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/check_staff_quit_bt"
        android:padding="5dp"
        android:text="@string/check_staff_title"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/check_staff_quit_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/check_staff_search_bt"
        android:background="@drawable/exit" />

    <ImageButton
        android:id="@+id/check_staff_search_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/check_staff_back_bt"
        android:background="@drawable/search" />

    <ImageButton
        android:id="@+id/check_staff_back_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/back" />
</RelativeLayout>