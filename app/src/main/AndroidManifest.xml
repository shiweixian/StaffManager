<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bestcode95.staffmanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.ModifyPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.CheckStaff"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.CheckMine"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.AddStaff"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.DeleteStaff"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.StaffDetail"
            android:screenOrientation="portrait" />
    </application>

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
